class Solution {
    public int maxConsecBits(int[] arr) {
        // code here
        
         int currnetC=1,max=1;
         
         for(int i=1;i<arr.length;i++)
         {
             if(arr[i]==arr[i-1])
             {
                 currnetC++;
             }
             else
             {
                 currnetC=1;
             }
             max=Math.max(max,currnetC);
         }
         return max;
    }
}
//O(n)
//O(1)
